<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit Employee</h1>

</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <%= employee.fullName %>
                    </li> 
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>ID: <%= employee._id %></b>
        </div>

    </div>
</div>

<form action="/edit/<%= employee._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="<%= employee.firstName %>" required>
        </div>
        <div class="col">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="<%= employee.lastName %>" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="tel">Telephone</label>
            <input type="text" class="form-control" id="tel" name="tel" value="<%= employee.tel %>"  required>
        </div>
        <div class="col">
            <label for="email">Email</label>
            <input type="text" class="form-control" id="email" name="email" value="<%= employee.email %>" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="job">Job Title</label>
            <input type="text" class="form-control" id="job" name="job" value="<%= employee.job %>" required>
        </div>
        <div class="col">
            <label for="eid">Employee ID</label>
            <input type="number" class="form-control" id="eid" name="eid" value="<%= employee.eid %>" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <label for="details">Additional Information</label>
        <textarea class="form-control" id="details" cols="30" rows="12" name="aif"><%= employee.aif %>
        </textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Employee</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Employee</button>
        <div class="col text-end fw-lighter">
            <b>Last Updated: <%= employee.updatedFormatted %></b>
        </div>
    </div>
</form>


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">
                    <b>Warning! You are about to remove an employee record</b>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    This will remove the employee record of <b class="fw-bold"><%= employee.fullName %></b><br>
                    Are you sure?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/edit/<%= employee._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-danger">Yes, Remove Employee</button>
                </form>
            </div>
        </div>
    </div>
</div>